<!DOCTYPE html>
<html>
  <head>
    <title>GunplaApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<%# CSS・・・assets/stylesheets/shared/header.css %>

  <body>
    <header class='top-page-header'>
      <div class='search-bar-contents'>
        <%= link_to image_tag("logo3.png", class:"logo-icon"), "/" %>
        <form class="search-form" action="#">
          <input class='input-box' placeholder='作品を探す'>
          <button class="search-button">
            <%= image_tag "search.png", class:"search-icon" %>
          </button>
        </form>
        <ul class='lists-right'>
          <% if user_signed_in? %>
            <li><%= link_to "新規投稿", new_tweet_path, class: :nav__btn %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
            <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li> 
          <% else %>
            <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
            <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
          <% end %>
        </ul>
      </div>
      <%# <div class='nav'>
      </div> %>
    </header>
    <%= yield %>
    <footer class="footer">
      <p class="copyright">Copyright © PROTO SPACE All rights reserved.</p>
    </footer>
  </body>
</html>
